{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Module Metadata Schema",
  "description": "Schema for AI module plugin metadata",
  "type": "object",
  "required": ["id", "name", "version", "category", "industry"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the module",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the module"
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the module",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "category": {
      "type": "string",
      "description": "Module category",
      "enum": [
        "manufacturing",
        "f&b",
        "retail",
        "sme",
        "healthcare",
        "logistics",
        "finance",
        "government"
      ]
    },
    "industry": {
      "type": "array",
      "description": "Industries this module applies to",
      "items": {
        "type": "string",
        "enum": [
          "manufacturing",
          "f&b",
          "retail",
          "sme",
          "healthcare",
          "logistics",
          "finance",
          "government"
        ]
      },
      "minItems": 1
    },
    "backend": {
      "type": "object",
      "description": "Backend API configuration",
      "properties": {
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["method", "path"],
            "properties": {
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"]
              },
              "path": {
                "type": "string",
                "pattern": "^/api/v\\d+/"
              },
              "description": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "frontend": {
      "type": "object",
      "description": "Frontend component configuration",
      "properties": {
        "component": {
          "type": "string",
          "description": "Component name/path"
        },
        "props": {
          "type": "object",
          "description": "Default props for the component"
        }
      }
    },
    "capabilities": {
      "type": "object",
      "description": "Module capabilities",
      "properties": {
        "canGenerateReports": {
          "type": "boolean",
          "default": false
        },
        "canSendAlerts": {
          "type": "boolean",
          "default": false
        },
        "requiresDataConnection": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Other module IDs this module depends on",
      "items": {
        "type": "string"
      }
    }
  }
}

